<odoo>
    <data>

        #Action........................................................................
        <record id="patients_action" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">hms.patient</field>
        </record>
       #view...............................................................................
        <record id="patient_tree_view" model="ir.ui.view">
            <field name="name">patient tree view</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="department_id"/>
                </tree>
            </field>
        </record>

        <record id="patient_form_view" model="ir.ui.view">
            <field name="name">patient form view</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="good" type="object" name="state_function"
                        attrs = "{'invisible':[('state','!=','undetermined')]}"/>
                        <button string="fair" type="object" name="state_function"
                        attrs = "{'invisible':[('state','!=','good')]}"/>
                        <button string="serious" type="object" name="state_function"
                        attrs = "{'invisible':[('state','!=','fair')]}"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="first_name" required="True"/>
                                <field name="last_name" required="True"/>
                                <field name="birth_date"/>
                                <field name="history"/>
                                <field name="cr_ratio" attrs="{'required':[('pcr','=',True)]}"/>
                                <field name="blood_type"/>
                            </group>
                            <group>
                                <field name="pcr"/>
                                <field name="image"/>
                                <field name="age"/>
                                <field name="doctor_id"/>
                                <field name="department_id" domain="[('is_opened','=',True)]"/>
                                <field name="capacity_id"/>

                            </group>
                        </group>
                        <notebook>
                            <page string ="log history">
                                    <field name="log_history_id" attrs="{'invisible':[('age','=', 50)]}">
                                        <tree>
                                        <field name="created_by"/>
                                        <field name="date" />
                                        <field name="description" />
                                        </tree>
                                    </field>

                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>



        <menuitem id="hms_root" name="hms"/>
        <menuitem id="hms_patients" name="Patients" parent="hms_root" action="patients_action" />


    </data>
</odoo>