<odoo>
    <data>



 #Action........................................................................
        <record id="departments_action" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">hms.department</field>
        </record>

        #view...............................................................................
        <record id="department_tree_view" model="ir.ui.view">
            <field name="name">department tree view</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                     <field name="is_opened"/>
                    <field name="capacity"/>
                </tree>
            </field>
        </record>

          <record id="department_form_view" model="ir.ui.view">
            <field name="name">department form view</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="is_opened"/>
                        </group>
                        <notebook>
                            <page string ="Patients"> <field name="patient_id"/> </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        #menus................................................................
            <menuitem id="hms_department" name="Departments" parent="hms_root" action="departments_action" />

    </data>
</odoo>